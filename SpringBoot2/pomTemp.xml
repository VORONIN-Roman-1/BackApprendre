</dependency>
<dependency>
<groupld>org.hibernate</groupld>
<artifactld>hibernate-entitymanager</artifactld>
<version>${hibernate.version}</version>
</dependency>
<!-- Журналы -->
<dependency>
<groupld>org.slf4j</groupld>
<artifactld>jcl-over-slf4j</artifactld>
<version>${slf4j.version}</version>
</dependency>
<dependency>
<groupld>ch.qos.logback</groupld>
<artifactld>logback-classic</artifactld>
<version>${logback.version}</version>
</dependency>
