<dependency>
<groupld>org.springframework</groupld>
<artifactld>spring-webmvc</artifactld>
<version>${spring-framework.version}</version>
</dependency>
<!-- Spring Data DPA -->
<dependency>
<groupld>org.springframework.data</groupld>
<artifactld>spring-data-jpa</artifactld>
