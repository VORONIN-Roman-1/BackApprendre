<modelVersion>4.0.0</modelVersion>
<groupld>com.apress.todo</groupld>
<artifactld>todo</artifactld>
<packaging>war</packaging>
<version>0.0.1-SNAPSHOT</version>
<name>todo Webapp</name>
<properties>
<!-- Универсальные свойства -->
<java.version>1.8</java.version>
<!-- Веб -->
<jsp.version>2.2</jsp.version>
<jstl.version>l.2</jstl.version>
<servlet.version>3.1.0</servlet.version>
bootstrap.version>3.3.7</bootstrap.version>
<jackson.version>2.9.2</jackson.version>
<webjars.version>0.32</webjars.version>
<!-- Spring -->
<spring-framework.version>5.0.3.RELEASE</spring-framework.version>
<!-- DPA -->
<spring-data-jpa>l.11.4.RELEASE</spring-data-jpa>
<hibernate-jpa.version>l.0.0.Final</hibernate-jpa.version>
<hibernate.version>4.3.11.Final</hibernate.version>
<!-- Драйверы -->
<h2.version>1.4.197</h2.version>
<!-- Журналы -->
<slf4j.version>1.7.25</slf4j.version>
<logback.version>l.2.3</logback.version>
