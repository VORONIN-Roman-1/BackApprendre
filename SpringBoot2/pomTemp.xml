<groupld>com.fasterxml.jackson.core</groupld>
<artifactld>jackson-databind</artifactld>
<version>${jackson.version}</version>
</dependency>
<dependency>
<groupld>com.fasterxml.jackson.datatype</groupld>
<artifactld>jackson-datatype-joda</artifactld>
<version>${jackson.version}</version>
</dependency>
<dependency>
<groupld>com.fasterxml.jackson.dataformat</groupld>
<artifactld>jackson-dataformat-xml</artifactld>
<version>${jackson.version}</version>
</dependency>
